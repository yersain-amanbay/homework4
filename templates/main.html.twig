<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet"  href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.0.3/css/font-awesome.css'>
    <title>Products</title>
    <style >
        body {background: linear-gradient(to right, #c04848, #153b56);min-height: 100vh}
        .text-gray {color: #aaa} .btn-block{background-color: #15a9ce; color: white}
    </style>
</head>
<body>

<div class="container">
    <div class="row text-center text-white mb-5">
        <div class="col-lg-7 mx-auto">
            <h1 class="display-4">List of sushi</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 mx-auto">

            <ul class="list-group shadow">

                {% include 'products.html.twig' %}

            </ul>

            <br>
            <button type="button" id="load-more" class="btn btn-lg btn-block" onclick="loadMore()">Load more</button>
            <input type="hidden" id="row" value="0">
            <input type="hidden" id="all" value="{{products.0.count}}">
            <br>
        </div>
    </div>
</div>



<script src="https://code.jquery.com/jquery-3.5.1.min.js" ></script>
