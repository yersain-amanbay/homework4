
{% for product in products %}

<li class="list-group-item post">
    <div class="media align-items-lg-center flex-column flex-lg-row p-3">
        <div class="media-body order-2 order-lg-1">
            <h5 class="mt-0 font-weight-bold mb-2">{{ product.name }}</h5>
            <p class="font-italic text-muted mb-0 small">{{ product.param }}</p>

            <div class="d-flex align-items-center justify-content-between mt-1">
                <h6 class="font-weight-bold my-2">{{ product.price }} &#8381;</h6>
                <ul class="list-inline small">
                    {% for i in 1..5 %}
                        {% if i == 5 %}
                            <li class="list-inline-item m-0"><i class="fa fa-star text-gray"></i></li>
                        {% else %}
                            <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                        {% endif %}

                    {% endfor %}


                </ul>
            </div>
        </div><img src="{{ product.img }}" alt="Generic placeholder image" width="200" class="ml-lg-5 order-1 order-lg-2">
    </div>
</li>

{% endfor %}
